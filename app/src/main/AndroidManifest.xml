<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.bitplanet.employment">

	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:name="base.model.App"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		
		<activity
			android:name="features.splash.view.SplashScreenActivity"
			android:label="@string/app_name"
			android:theme="@style/SplashTheme">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity
			android:name="base.view.DrawerActivity"
			android:configChanges="orientation|keyboardHidden|screenSize|locale"
			android:label="@string/app_name"
			android:parentActivityName="features.splash.view.SplashScreenActivity"
			android:screenOrientation="portrait"
			android:theme="@style/AppTheme.NoActionBar"
			android:windowSoftInputMode="stateHidden" />
		
		
		<activity
			android:name="features.auth.view.AuthActivity"
			android:configChanges="orientation|keyboardHidden|screenSize|locale"
			android:label="@string/app_name"
			android:parentActivityName="features.splash.view.SplashScreenActivity"
			android:screenOrientation="portrait"
			android:theme="@style/AppTheme.NoActionBar"
			android:windowSoftInputMode="stateHidden" />
	
	</application>
	
	<meta-data
		android:name="io.fabric.ApiKey"
		android:value="bfe6496a3eac7b589b70b7b65f123467ae331a32" />
	
</manifest>