<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/whole_item"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:foreground="?android:attr/selectableItemBackground"
	android:orientation="vertical"
	android:padding="@dimen/activity_vertical_margin">
	
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/custom_dim_8">
		
		<TextView
			android:id="@+id/tv_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginEnd="@dimen/custom_dim_8"
			android:layout_toStartOf="@+id/tv_time"
			android:textColor="@color/primary_text"
			android:textSize="@dimen/txt_medium_xs"
			tools:text="Need to create an Andorid app" />
		
		<TextView
			android:id="@+id/tv_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			android:layout_gravity="end"
			android:layout_marginTop="@dimen/custom_dim_8"
			android:gravity="center_horizontal"
			android:textColor="@color/secondary_text"
			android:textSize="@dimen/txt_small_xs"
			android:textStyle="bold"
			tools:text="2 days ago" />
	
	</RelativeLayout>
	
	<TextView
		android:id="@+id/tv_field"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/secondary_text"
		android:textSize="@dimen/txt_small"
		android:textStyle="bold"
		tools:text="Computers and Technology" />
	
	<TextView
		android:id="@+id/tv_descr"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/custom_dim_8"
		android:textColor="@color/primary_text"
		android:textSize="@dimen/txt_small"
		tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat." />
	
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/custom_dim_12">
		
		<TextView
			android:id="@+id/tv_price"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/primary_text"
			android:textSize="@dimen/txt_medium_xs"
			android:textStyle="bold"
			tools:text="10,000 Mdl" />
		
		<TextView
			android:id="@+id/tv_aplicants"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			android:textColor="@color/secondary_text"
			android:textSize="@dimen/txt_small"
			android:textStyle="bold"
			tools:text="10 talents applied" />
	
	</RelativeLayout>

</LinearLayout>